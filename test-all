# To run in quiet mode:  "./test-all quiet".

file="test-suite.tcl"
directory="test-output"
quiet="false"
tests=`awk '/^Class Test\//{ print substr($2,index($2, "/")+1) }' $file`
if [ $# -ge 1 ] 
then
        flag="$*"
	if (test "$flag" = "QUIET" -o "$flag" = "quiet") then
	    quiet="true"
	else
	    tests="$*"
	fi
fi


if [ ! -d $directory ]; then
	mkdir $directory
fi

echo $tests
for t in $tests; do
    if (test "$quiet" = "false") then
    	echo
    fi
    echo Running test $t

    # Beware that xgraph is run on temp.rands asynchronously, if it
    # is slow to launch, you may get an incorrect graph
    if (test "$quiet" = "true") then
    	./ns $file $t QUIET
    else 
	./ns $file $t
    fi
    if [ -f temp.rands ]; then
	if [ ! -f $directory/$t ]; then
	    echo saving output for future validation
	    cp temp.rands $directory/$t
	else
	    cmp -s temp.rands $directory/$t
	    if [ $? = 0 ]; then
		echo Test output agrees with reference output
	    else
		echo Test output differs from reference output
		cp temp.rands $directory/$t.test
	        echo "Diagnose with: diff $directory/$t.test $directory/$t"
	 	echo "Differences due to floating-point formatting are not significant."

	    fi
	fi
    fi
    if (test "$quiet" = "false") then
        echo 'next?'
        read answer
    fi
done
